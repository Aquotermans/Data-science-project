#Find PK of the table
SELECT name
FROM sys.key_constraints
WHERE type = 'PK'
  AND parent_object_id = OBJECT_ID('person');

#Drop primary key from the table, PK_ is constant !
ALTER TABLE person
DROP CONSTRAINT PK_person;

#Find FK from a table
SELECT name
FROM sys.foreign_keys
WHERE parent_object_id = OBJECT_ID('PERSON_DIAGNOSTICS')

#Drop FK
ALTER TABLE PERSON_DIAGNOSTICS
DROP CONSTRAINT <foreign_key_constraint_name>;

#Make a column primary key
ALTER TABLE contact
ALTER COLUMN contact_id bigint NOT NULL; 

ALTER TABLE contact
ADD PRIMARY KEY (contact_id); 
